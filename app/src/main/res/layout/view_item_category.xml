<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="5dp"
    android:transitionName="@string/transition_background"
    android:id="@+id/content_tiem"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layout_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="56dp"
        android:layout_toRightOf="@+id/category_iv"
        android:layout_toEndOf="@+id/category_iv">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/material_grey_800"
            android:textStyle="bold"
            android:text="Dos"
            android:alpha="0.7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_tv"
            android:textColor="@color/material_grey_800"
            android:paddingTop="10dp"
            android:textSize="14sp"
            android:text="Dos"
            android:alpha="0.5"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/category_iv"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:scaleType="centerCrop"
        android:layout_alignBottom="@+id/layout_rl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>